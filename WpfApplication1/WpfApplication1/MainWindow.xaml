<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF2582C2">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtIdade" HorizontalAlignment="Left" Height="23" Margin="279,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Grid.Column="1" ToolTip="Digite a Idade" Grid.RowSpan="2"/>
        <Button x:Name="cmdEnviar" Content="Enviar" HorizontalAlignment="Left" Margin="47,92,0,0" VerticalAlignment="Top" Width="128" Height="48" Grid.Column="1" Click="cmdEnviar_Click" Grid.RowSpan="2"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Height="23" Margin="47,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Grid.Column="1" ToolTip="Digite o nome." Grid.RowSpan="2"/>
        <CheckBox x:Name="chkChecado" Grid.ColumnSpan="2" Content="CheckBox" HorizontalAlignment="Left" Margin="328,112,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Click="chkChecado_Click"/>

    </Grid>
</Window>
